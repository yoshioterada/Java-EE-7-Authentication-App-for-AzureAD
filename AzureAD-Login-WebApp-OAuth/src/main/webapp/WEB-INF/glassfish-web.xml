<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
  <!--- 
<glassfish-web-app error-url="" httpservlet-security-provider="AzureAD-LoginModule">

        login.conf に記載した認証用モジュールと同一名を指定
        AzureAD-Login {
            com.yoshio3.jaspic.AzureADLoginModule required;
        };
    -->
<glassfish-web-app error-url="">
  <class-loader delegate="true"/>
  <security-role-mapping>
    <role-name>standard</role-name>
    <group-name>standard</group-name>
    <group-name>87ce26ee-3c4a-4112-9882-859d9dc9385b</group-name>    
  </security-role-mapping>
  <security-role-mapping>
    <role-name>admin</role-name>
    <group-name>admin</group-name>
    <group-name>8ecd8366-7f88-41fd-98e6-ada90fe97b52</group-name>
  </security-role-mapping>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
  </jsp-config>
  <parameter-encoding default-charset="UTF-8"/>
</glassfish-web-app>
